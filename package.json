{
  "name": "sound-of-water",
  "version": "0.0.0",
  "homepage": "https://github.com/rndmem/sound-of-water",
  "repository": "github:rndmem/sound-of-water",
  "bugs": "https://github.com/rndmem/sound-of-water/issues",
  "scripts": {
    "start": "run-p watch",
    "serve:dev": "browser-sync start -c .browsersync.js",
    "watch": "run-p typecheck:watch pack:watch copy:watch serve:dev",
    "build": "run-p typecheck pack copy",
    "rebuild": "run-s clean build",
    "pack:watch": "run-p mkdir-dist:www && watchify -dt babelify -o 'cat|run-p exorcist:stdin' src/js",
    "pack": "run-p mkdir-dist:www && browserify -dt babelify src/js|run-p exorcist:stdin && uglifyjs dist/www/bundle.js --in-source-map dist/www/bundle.js.map --source-map dist/www/bundle.js.map --screw-ie8 -o dist/www/bundle.js -c sequences,properties,dead_code,conditionals,comparisons,evaluate,booleans,loops,unused,hoist_funs,if_return,join_vars,cascade,collapse_vars,negate_iife,passes=3",
    "mkdir-dist:www": "mkdir -p dist/www",
    "exorcist:stdin": "exorcist dist/www/bundle.js.map > dist/www/bundle.js",
    "copy": "cpx src/static/** dist/www/",
    "copy:watch": "cpx src/static/** dist/www/ -w",
    "typecheck": "flow",
    "typecheck:watch": "watch flow src/js",
    "typecheck:stdin": "flow check-contents",
    "typecheck-suggest:file": "flow suggest",
    "lint": "run-p eslint jsonlint",
    "eslint": "eslint --cache --max-warnings 0 .*.js src/js",
    "eslint:stdin": "eslint --max-warnings 0 --stdin --stdin-filename",
    "eslint-fix:file": "eslint --cache --fix",
    "jsonlint": "find src *.json -name \\*.json -exec bash -o pipefail -c 'jsonlint -q {} |& sed \"1 s%^%$(echo -en \\\\e[31m){}$(echo -en \\\\e[00m)\\n%; $ s%$%\\n%\"' \\;",
    "jsonlint:file": "jsonlint -q",
    "jsonlint:stdin": "jsonlint > /dev/null",
    "clean": "rm -rf dist",
    "clobber": "rm -rf dist node_modules typings",
    "upgrade": "ncu -atu",
    "postinstall": "typings i"
  },
  "engines": {
    "node": "6.2.0"
  },
  "dependencies": {
    "phaser": "2.4.8"
  },
  "devDependencies": {
    "babel-core": "6.9.1",
    "babel-eslint": "6.0.4",
    "babel-plugin-syntax-flow": "6.8.0",
    "babel-plugin-transform-flow-strip-types": "6.8.0",
    "babel-plugin-typecheck": "3.9.0",
    "babel-preset-es2015": "6.9.0",
    "babel-preset-stage-0": "6.5.0",
    "babelify": "7.3.0",
    "browser-sync": "2.13.0",
    "browserify": "13.0.1",
    "cpx": "1.3.1",
    "eslint": "2.11.1",
    "eslint-plugin-flowtype": "2.2.7",
    "eslint-plugin-jsdoc": "2.3.1",
    "eslint-plugin-node": "1.4.0",
    "eslint-plugin-promise": "1.3.2",
    "exorcist": "0.4.0",
    "flow-bin": "0.27.0",
    "jsonlint": "1.6.2",
    "npm-check-updates": "2.6.5",
    "npm-run-all": "2.1.1",
    "typescript": "1.9.0-dev.20160604-1.0",
    "typings": "1.0.4",
    "uglify-js": "git://github.com/mishoo/UglifyJS2.git#5c4cfaa",
    "watch": "0.18.0",
    "watchify": "3.7.0"
  },
  "license": "GPL-3.0"
}
